{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,

    /* Base Options: */
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Bundled projects */
    "module": "commonjs",

    /* Strictness */
    "strict": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
